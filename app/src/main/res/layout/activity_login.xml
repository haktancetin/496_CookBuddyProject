<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/lgnbackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fontFamily="@font/covered_by_your_grace"
            android:text="@string/COOKBUDDY"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="70sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/log_et_username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            android:hint="Username"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/log_et_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/log_txt_verify"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Please check your username and password."
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="10sp"
            android:textColor="@color/palete32"
            android:textSize="17sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/bttn_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            android:text="Log In"
            android:textColor="@color/palet71"
            android:textSize="20sp"
            android:background="@drawable/button_shape"
            />
        <TextView
            android:id="@+id/log_txt_or"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="or"
            android:textAlignment="center"
            android:layout_marginHorizontal="22dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/bttn_sign"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="130dp"
            android:textColor="@color/palet71"
            android:text="Sign Up"
            android:textSize="20dp"
            android:background="@drawable/button_shape" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>